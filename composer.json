{
    "name": "ezyt/php-sendsay",
    "description": "Object-oriented interface to Sendsay API.",
    "type": "library",
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.2 <8.1",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^6.0|^7.0",
        "monolog/monolog": "~1.0"
    },
    "require-dev": {
        "ext-curl": "*",
        "phpunit/phpunit": "~9.0"
    },
    "autoload": {
        "psr-4": {
            "Ezyt\\Sendsay\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ezyt\\Sendsay\\Tests\\": "tests/"
        }
    }
}
